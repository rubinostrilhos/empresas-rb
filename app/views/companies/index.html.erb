<div class="container text-center">
  <div class="companies-upper">
      <%= image_tag("icons/xmark-solid.svg", alt: "", class: "x-mark") %>

    <div class="companies-number">
      <h1>EMPRESAS</h1>
      <h5 class="companies-total"><%= "Total de empresas: #{@companies.size}" %></h5>
    </div>



    <div class="companies-search">

      <%= image_tag("icons/sliders-icon.svg", alt: "", class: "filters") %>
      <%= form_with url: companies_path, method: :get, class: "d-flex mb-4 mt-4" do %>



        <%# Filtros da busca index de companies %>

        <div class="select-group" id="select-group">
          <%= select_tag :uf, options_for_select(Company.distinct.where(approval_status: true).pluck(:uf).compact.sort, params[:uf]), include_blank: "UF", class: "form-control company-filter company-select" %>
          <%= select_tag :segment, options_for_select(Company.distinct.where(approval_status: true).pluck(:segment).compact.sort, params[:segment]), include_blank: "Segmento", class: "form-control company-filter company-select" %>
          <%= select_tag :category, options_for_select(Company.distinct.where(approval_status: true).pluck(:category).compact.sort, params[:category]), include_blank: "Categoria", class: "form-control company-filter company-select" %>
        </div>

        <div class="submit-group">
          <%= text_field_tag :query,
            params[:query],
           class: "form-control company-search company-filter",
            placeholder: "Encontrar"
          %>
          <%= submit_tag "Busca", name: "", class: "btn btn-primary company-search-button company-filter" %>
          <%= link_to "Limpar", companies_path, class: "btn btn-secondary company-filter company-filter-button" %>
        </div>

      <% end %>

      <%= link_to new_company_path, class:"add-company" do %>
        <span class="fa-solid">+</span> Adicionar nova empresa
      <% end %>
    </div>
  </div>



  <ul class="grid-cards">
    <% @companies.each do |company| %>
      <%# <li><%= link_to company.name, company_path(company.id) </li>%>
      <%= render "components/card-2", company: company %>
    <% end %>
  </ul>
</div>
